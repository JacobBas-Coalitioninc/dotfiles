# Ghostty Configuration converted from WezTerm

# Color scheme - Gruvbox dark
theme = GruvboxDark

# Font configuration
# font-family = "Monaspace Neon"
font-family = "Terminess Nerd Font Mono"
font-size = 12

# Keybindings
# Tab management
keybind = super+shift+t=new_tab
keybind = super+shift+right=next_tab
keybind = super+shift+left=previous_tab

# Split configurations
keybind = ctrl+shift+v=new_split:right
keybind = ctrl+shift+h=new_split:down
